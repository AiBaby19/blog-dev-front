{
  "extends": "../tslint.json",
  "rules": {
    "directive-selector": [true, "attribute", "app", "camelCase"],
    "component-selector": [true, "element", "app", "kebab-case"],
    "one-line": [true, "check-catch", "check-finally", "check-else"],
    "curly": [true, "ignore-same-line"],
    "no-trailing-whitespace": true
  }
}
